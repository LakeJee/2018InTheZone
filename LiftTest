/*---------------------------------------------------------------------------*/
/*                                                                           */
/*                              User Control Task                            */
/*                                                                           */
/*  This task is used to control your robot during the user control phase of */
/*  a VEX Competition.                                                       */
/*                                                                           */
/*  You must modify the code to add your own robot specific commands here.   */
/*---------------------------------------------------------------------------*/

task usercontrol()
{
  // User control code here, inside the loop

  while (true)
  {
	while(vexRT[Btn7U] == 1){ //Move Lift up with btn 7U
  		moveLift(50);
  	}
	while(vexRT[Btn7D] == 1){ //Move Lift down with btn 7D
  		moveLift(-20);
  	}
  while(vexRT[Btn8L] == 1){
  		stopAll();
  }
  moveLift(10);
}
}
void stopAll(){
	motor[aLUp] = 0;
	motor[aRUp] = 0;
	motor[aLDown] = 0;
	motor[aRDown] = 0;
}
void moveLift(int power){
	motor[aLUp] = power;
	motor[aRUp] = power;
	motor[aLDown] = power;
	motor[aRDown] = power;
}
